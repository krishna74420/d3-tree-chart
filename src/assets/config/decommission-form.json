          "key": "aitNumber",
          "type": "input",
          "templateOptions": {
            "label": "AIT Number",
            "required": true
          }
        },
        {
          "key": "crqGroup",
          "type": "input",
          "templateOptions": {
            "label": "CRQ Group",
            "required": true
          }
        },
